{% extends "page.njk" %}

{% block body %}
    <section class="section">
        <div class="container">
            <h1 class="title">
                Clause Template Library
            </h1>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <h2 class="title is-2">Templates</h2>
            <table class="table">
            <thead>
                <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Cicero Version</th>
                <th>Type</th>
                <th>Language</th>
                </tr>
            </thead>
            <tbody>
                {% for name, val in templateIndex |dictsort%}
                <tr>
                <th><a href="{{name}}.html">{{name}}<a></th>
                <td>{{val.description}}</td>
                <td>{{val.ciceroVersion}}</td>
                <td>{% if val.type === 0 %}Contract{% else %}Clause{% endif %}</td>
                <td>{% if val.language === 0 %}Ergo{% else %}JavaScript{% endif %}</td>
                {% endfor %}
            </tbody>            
            <tfoot>
                <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Cicero Version</th>
                <th>Type</th>
                <th>Language</th>
                </tr>
            </tfoot>
            </table>
            <div class="content">
                <a href="template-library.json">Template Library Index</a>
            </div>
        </div>
    </section>

{% endblock %}